<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">
            <include layout="@layout/activity_menu_bar"></include>
        </LinearLayout>

        <!-- Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#EAEAEA">

            <!-- 출발지 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/txtFromTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/border"
                        android:text=" 출발 "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutFromhint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/txtFromHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:hint="출발지 검색"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFrom"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/txtFromDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView
                        android:id="@+id/txtFromSiDo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/btnFromPointChange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:text="@string/fa_random"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/btnFromMap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:text="@string/fa_sort_desc"
                        />

                </LinearLayout>

            </LinearLayout>

            <!--도착지 및 맵-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <!-- 도착지 1 -->
                <LinearLayout
                    android:id="@+id/layoutTo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/txtTotitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/border"
                                android:text=" 도착 "
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutOrderHint"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/txtToHint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text=""
                                android:hint="도착지 검색"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutOrderTo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            >
                            <TextView
                                android:id="@+id/txtToDong1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text=""
                                android:hint="도착지 검색"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                            <TextView
                                android:id="@+id/txtToSiDO1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="16sp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/btnToPointChange1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_background"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textColor="@color/black"
                                android:text="@string/fa_random"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/btnToMap1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_background"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textColor="@color/black"
                                android:text="@string/fa_sort_desc"

                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <com.nhn.android.maps.NMapView
                        android:id="@+id/mapView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />
                </FrameLayout>

                <!-- 도착지 2 -->
                <LinearLayout
                    android:id="@+id/layoutTo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    android:visibility="visible"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/txtTotitle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/border"
                                android:text=" 도착 "
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutOrderHint1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/txtToHint1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text=""
                                android:hint="도착지 검색"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutOrderTo1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            >
                            <TextView
                                android:id="@+id/txtToDong"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text=""
                                android:hint="도착지 검색"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                            <TextView
                                android:id="@+id/txtToSiDO"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="16sp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/btnToPointChange"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_background"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textColor="@color/black"
                                android:text="@string/fa_random"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/btnToMap"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_background"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textColor="@color/black"
                                android:text="@string/fa_sort_asc"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--접수 내용-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="2dp"
                android:orientation="vertical">
                <!-- 출/도착 거리 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:background="#400000FF">

                    <TextView
                        android:id="@+id/btnStartEndMapview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="출발-도착 지도보기"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="동승인원"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <Spinner
                        android:id="@+id/spinerGetOnCount"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_background"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="이용목적"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <Spinner
                        android:id="@+id/spinerUseCause"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_background"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        />
                </LinearLayout>

                <!--예약배차-->
                <LinearLayout
                    android:id="@+id/layoutBookingDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="예약날짜"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/txtBookingDate"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/textbox_focus_gray"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <com.beardedhen.androidbootstrap.AwesomeTextView
                            android:id="@+id/btnFromCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:textSize="28sp"
                            android:textColor="#FFFFFF"
                            app:fontAwesomeIcon="fa_calendar"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutBookingTime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="예약시간"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/txtBookingTime"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/textbox_focus_gray"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <com.beardedhen.androidbootstrap.AwesomeTextView
                            android:id="@+id/btnFromClock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:textSize="28sp"
                            android:textColor="#FFFFFF"
                            app:fontAwesomeIcon="fa_clock_o"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!--옵션-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="휠체어사용"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="viewEnd"
                        />
                    <CheckBox
                        android:id="@+id/checkUseWheel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:button="@drawable/btn_radio_"
                        />
                    <LinearLayout
                        android:id="@+id/layoutBookingTurn"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#FFFFFF">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2.5dp"
                            android:layout_marginBottom="2.5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:text="왕복여부"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textAlignment="viewEnd"
                            />
                        <CheckBox
                            android:id="@+id/checkTurnBooking"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:layout_marginBottom="2.5dp"
                            android:layout_marginLeft="5dp"
                            android:button="@drawable/btn_radio_"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutBookingTurnTemp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:visibility="gone">
                    </LinearLayout>
                </LinearLayout>

                <!-- 예약 더미 레이어 -->
                <LinearLayout
                    android:id="@+id/layoutBookingTemp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:visibility="gone">
                </LinearLayout>

                <!--왕복시-->
                <LinearLayout
                    android:id="@+id/layoutTurnBookingDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="예약날짜"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/txtBookingTurnDate"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/textbox_focus_gray"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <com.beardedhen.androidbootstrap.AwesomeTextView
                            android:id="@+id/btnToCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:textSize="28sp"
                            android:textColor="#FFFFFF"
                            app:fontAwesomeIcon="fa_calendar"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTurnBookingTime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="예약시간"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/txtBookingTurnTime"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/textbox_focus_gray"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        />
                    <LinearLayout
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <com.beardedhen.androidbootstrap.AwesomeTextView
                            android:id="@+id/btnToClock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:textSize="28sp"
                            android:textColor="#FFFFFF"
                            app:fontAwesomeIcon="fa_clock_o"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!-- 왕복 더미 레이어 -->
                <LinearLayout
                    android:id="@+id/layoutBookingTemp2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:visibility="gone">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!-- Bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <include layout="@layout/activity_menu_bottom"></include>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/background_dark"
        android:orientation="vertical"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        >

        <include layout="@layout/activity_left_menu"></include>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
