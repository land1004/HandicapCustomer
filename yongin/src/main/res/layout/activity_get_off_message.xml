<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_noti_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.or.yongin.transporthelp.GetONMessageActivity"
    android:background="#EAEAEA"
    android:orientation="vertical"
    >
    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <include layout="@layout/activity_title_bar"></include>
    </FrameLayout>

    <!-- Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/getoff_message"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtGetoffPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="서초소방서에서 용인시청으로 가는 차량을 탑승하셨습니다"
            android:textColor="@color/bootstrap_gray_dark"
            android:textAlignment="center"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/txtGetOffCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="경기 11가 1111 \n예상 소요 시간은 30분 입니다"
            android:textColor="@color/bootstrap_gray_dark"
            android:textAlignment="center"
            android:textSize="22sp"
            />

    </LinearLayout>

    <!-- Bottom -->
    <FrameLayout
        android:id="@+id/framlayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <include layout="@layout/activity_menu_bottom"></include>
    </FrameLayout>
</LinearLayout>
