<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="vertical">

    <!-- Group name -->
    <LinearLayout
        android:id="@+id/layoutHistoryGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/list_group_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="24sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/border"
            />
    </LinearLayout>

    <!-- 일자 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/list_item1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
    </LinearLayout>

    <!-- 출발 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/list_item2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/list_item3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/list_item4"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </LinearLayout>

    <!-- 도착 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/list_item5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/list_item6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/list_item7"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </LinearLayout>

    <!-- 상태 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/list_item8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/list_item9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:textAlignment="textStart"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 기사명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/list_item10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center|center"
                    android:textColor="@android:color/black"
                    android:text=""
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

            <!-- 차량번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/list_item11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center|center"
                    android:textColor="@android:color/black"
                    android:text=""
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnBookingCancel"
                style="@style/wrapping_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="예약취소"
                android:visibility="gone"
                app:bootstrapBrand="warning"
                app:roundedCorners="true"
                app:bootstrapSize="md"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>